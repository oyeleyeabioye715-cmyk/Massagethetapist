<script>
// Price calculator
const servicePrices = {
"Swedish Massage": 50,
"Deep Tissue Massage": 60,
"Hot Stone Massage": 100,
"Sports Massage": 60,
"Prenatal Massage": 90,
"Reflexology / Foot Massage": 40
};

function calculatePrice(service, duration){
    if(!servicePrices[service] || !duration) return 0;
    // Assume price scales linearly: base price per standard duration
    let baseDurations = { "Swedish Massage": 30, "Deep Tissue Massage": 30, "Hot Stone Massage": 60, "Sports Massage": 30, "Prenatal Massage": 60, "Reflexology / Foot Massage": 30 };
    return Math.round(servicePrices[service] * (duration / baseDurations[service]));
}

// WhatsApp calculator
const serviceSelect = document.getElementById('service');
const durationInput = document.getElementById('duration');
const priceDisplay = document.getElementById('price');

function updatePrice(){
    const service = serviceSelect.value;
    const duration = parseInt(durationInput.value);
    priceDisplay.textContent = `$${calculatePrice(service, duration)}`;
}
serviceSelect.addEventListener('change', updatePrice);
durationInput.addEventListener('input', updatePrice);

// Email calculator
const emailServiceSelect = document.getElementById('email-service');
const emailDurationInput = document.getElementById('email-duration');
const emailPriceDisplay = document.getElementById('email-price');

function updateEmailPrice(){
    const service = emailServiceSelect.value;
    const duration = parseInt(emailDurationInput.value);
    emailPriceDisplay.textContent = `$${calculatePrice(service, duration)}`;
}
emailServiceSelect.addEventListener('change', updateEmailPrice);
emailDurationInput.addEventListener('input', updateEmailPrice);

// Payment sections toggle
const paymentMethodSelect = document.getElementById('paymentMethod');
const bitcoinSection = document.getElementById('bitcoinSection');
const giftcardSection = document.getElementById('giftcardSection');
paymentMethodSelect.addEventListener('change', () => {
    bitcoinSection.style.display = paymentMethodSelect.value === 'Bitcoin' ? 'block' : 'none';
    giftcardSection.style.display = paymentMethodSelect.value === 'Gift Card' ? 'block' : 'none';
});

const emailPaymentSelect = document.getElementById('email-payment');
const emailBitcoinSection = document.getElementById('emailBitcoinSection');
const emailGiftcardSection = document.getElementById('emailGiftcardSection');
emailPaymentSelect.addEventListener('change', () => {
    emailBitcoinSection.style.display = emailPaymentSelect.value === 'Bitcoin' ? 'block' : 'none';
    emailGiftcardSection.style.display = emailPaymentSelect.value === 'Gift Card' ? 'block' : 'none';
});
</script>

